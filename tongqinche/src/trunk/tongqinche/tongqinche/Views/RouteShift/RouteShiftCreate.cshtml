@{
    ViewBag.Title = "RouteShiftCreate";
}

@section Head{
    <link href="../media/css/jqvmap.css" media="screen" rel="stylesheet" type="text/css" />
}


<div class="container-fluid">
    <!-- BEGIN PAGE HEADER-->

    <div class="row-fluid">

        <div class="span12">

            <ul class="breadcrumb">

                <li>

                    <i class="icon-home"></i>

                    @Html.ActionLink("首页", "Index", "Home", routeValues: null, htmlAttributes: new { id = "IndexLink" })

                    <span class="icon-angle-right"></span>

                </li>

                <li>

                    <a href="#">基础数据管理</a>

                    <span class="icon-angle-right"></span>

                </li>

                <li>
                    @Html.ActionLink("路线班次新增", "RouteShiftCreate", "RouteShift", routeValues: null, htmlAttributes: new { id = "RouteShiftCreateLink" })
                </li>

            </ul>

        </div>

    </div>

    <!-- END PAGE HEADER-->
    <!-- BEGIN PAGE CONTENT-->

    <div class="row-fluid">

        <div class="span12">

            <!-- BEGIN SAMPLE FORM PORTLET-->

            <div class="portlet-body form">

                <div class="tabbable portlet-tabs">

                    <div class="portlet-body">

                        <div class="clearfix">

                            <div class="btn-group">

                                <button id="btnAdd" class="btn green" onclick="btnAdd_Click()">

                                    保存 <i class="icon-save"></i>

                                </button>
                            </div>
                            <div class="btn-group">
                                <button id="btnBack" class="btn green">

                                    返回 <i class="icon-retweet"></i>

                                </button>
                            </div>

                        </div>


                    </div>

                    <br />
                    <br />
                    <br />
                    <div class="tab-content">

                        <div class="tab-pane active" id="portlet_tab1">

                            <!-- BEGIN FORM-->

                            <form action="#" class="form-horizontal">

                                <div class="row-fluid">
                                    <div class="span6 ">
                                        <div class="span6 ">

                                            <div class="control-group">

                                                <label class="control-label">班次名称:</label>

                                                <div class="controls">

                                                    <select id="shiftName" class="medium m-wrap">
                                                        <option value="sh"></option>
                                                    </select>
                                                </div>

                                            </div>

                                        </div>
                                    </div>
                                    <div class="span6 ">
                                        <div class="control-group">
                                            <label class="control-label"> 班次类型:</label>

                                            <div class="controls">

                                                <select id="shiftType" class="medium m-wrap">
                                                    <option value="sh"></option>
                                                </select>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                                <div class="row-fluid">

                                    <div class="span6 ">

                                        <div class="control-group">

                                            <label class="control-label">路线所属表:</label>

                                            <div class="controls">

                                                <select id="tableName" class="medium m-wrap">
                                                    <option value="sh"></option>
                                                </select>
                                            </div>

                                        </div>

                                    </div>
                                    <div class="span6 ">
                                        <div class="control-group">

                                            <label class="control-label"> 开车时间:</label>

                                            <div class="controls">

                                                <select id="driveTime" class="medium m-wrap">
                                                    <option value="sh"></option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row-fluid">
                                        <div class="span6 ">
                                            <div class="control-group">

                                                <label class="control-label"> 路线名称:</label>

                                                <div class="controls">

                                                    <select id="routeName" class="medium m-wrap">
                                                        <option value="pd"></option>
                                                    </select>
                                                </div>
                                            </div>

                                        </div>

                                    </div>

                                </div>
                            </form>

                            <!-- END FORM-->

                        </div>

                    </div>

                </div>

            </div>

        </div>

        <!-- END SAMPLE FORM PORTLET-->
        <div class="row-fluid">
            <div class="span12">
                <div class="portlet box light-grey">
                    <div class="portlet-body">

                        <table class="table table-striped table-hover table-bordered" id="table_view">

                            <thead>
                                <tr>
                                    <th>序号</th>
                                    <th>站点编号</th>
                                    <th>站点名称</th>
                                    <th>站点省</th>
                                    <th>站点市</th>
                                    <th>站点区域</th>
                                    <th>站点类型</th>
                                </tr>

                            </thead>

                            <tbody></tbody>
                        </table>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <!-- END PAGE CONTENT-->
</div>
@section Body{
   
    <script>
        window.onload = function () {
            $("#btnBack").click(function () {
                window.history.back(-1);
            });
        }

        function btnAdd_Click() {
            var d = {};
            //判断文件框内容
            if ($("#LocCode").val() == "") {
                alert("站点代码不能为空!");
                return;
            }
            d["LocCode"] = $("#LocCode").val();
            if ($("#LocName").val() == "") {
                alert("站点名称不能为空!");
                return;
            }
            d["LocName"] = $("#LocName").val();
            if ($("#province").val() == "") {
                alert("站点省不能为空!");
                return;
            }
            d["province"] = $("#province").val();
            if ($("#city").val() == "") {
                alert("站点市不能为空!");
                return;
            }
            d["city"] = $("#city").val();
            if ($("#area").val() == "") {
                alert("站点区域不能为空!");
                return;
            }
            d["area"] = $("#area").val();
            if ($("#LocType").val() == "") {
                alert("站点类型不能为空!");
                return;
            }
            d["LocType"] = $("#LocType").val();
            if ($("#LocAddress").val() == "") {
                alert("站点地址不能为空!");
                return;
            }
            d["LocAddress"] = $("#LocAddress").val();
            $.ajax({
                url: "../api/LocApi/CreateLoc",
                type: "post",
                contentType: 'application/json; charset=utf-8',
                data: JSON.stringify(d),
                success: function (data) {
                    if (data != 1) {
                        alert("新增成功!");
                    } else {
                        alert('新增失败！');
                    }
                }
            }).fail(
                   function (err) {
                       alert('新增失败！');
                   });
        }

    </script>
}

