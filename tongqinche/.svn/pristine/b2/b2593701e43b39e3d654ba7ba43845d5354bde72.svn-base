@{
    ViewBag.Title = "LocEdit";
}
@section Head{}
<div class="container-fluid">
    <!-- BEGIN PAGE HEADER-->

    <div class="row-fluid">

        <div class="span12">

            <ul class="breadcrumb">

                <li>

                    <i class="icon-home"></i>

                    @Html.ActionLink("首页", "Index", "Home", routeValues: null, htmlAttributes: new { id = "IndexLink" })

                    <span class="icon-angle-right"></span>

                </li>

                <li>

                    <a href="#">基础数据管理</a>

                    <span class="icon-angle-right"></span>

                </li>

                <li>
                    @Html.ActionLink("站点修改", "LocEdit", "Loc", routeValues: null, htmlAttributes: new { id = "LocEditLink" })
                </li>

            </ul>

        </div>

    </div>

    <!-- END PAGE HEADER-->
    <!-- BEGIN PAGE CONTENT-->

    <div class="row-fluid">

        <div class="span12">

            <!-- BEGIN SAMPLE FORM PORTLET-->

            <div class="portlet-body form">

                <div class="tabbable portlet-tabs">

                    <div class="portlet-body">

                        <div class="clearfix">

                            <div class="btn-group">

                                <button id="btnEdit" class="btn green">

                                    修改 <i class="icon-edit"></i>

                                </button>
                            </div>
                            <div class="btn-group">
                                <button id="btnBack" class="btn green">

                                    返回 <i class="icon-retweet"></i>

                                </button>
                            </div>

                        </div>


                    </div>

                    <br />
                    <br />
                    <br />
                    <div class="tab-content">

                        <div class="tab-pane active" id="portlet_tab1">

                            <!-- BEGIN FORM-->

                            <form action="#" class="form-horizontal">

                                <div class="row-fluid">
                                    <div class="span6 ">
                                        <div class="control-group">

                                            <label class="control-label">站点编号:</label>

                                            <div class="controls">

                                                <input type="text" class="m-wrap Meduam" value="@ViewBag.editLoc.LocCode" disabled />

                                            </div>

                                        </div>
                                    </div>
                                    <div class="span6 ">
                                        <div class="control-group">
                                            <label class="control-label"> 站点名称:</label>

                                            <div class="controls">

                                                <input type="text" class="m-wrap Meduam" value="@ViewBag.editLoc.LocName" />
                                            </div>

                                        </div>
                                    </div>
                                </div>
                                <div class="row-fluid">

                                    <div class="span6 ">

                                        <div class="control-group">

                                            <label class="control-label">站点省:</label>

                                            <div class="controls">

                                                <select class="medium m-wrap">
                                                    <option value="">上海</option>
                                                </select>
                                            </div>

                                        </div>

                                    </div>
                                    <div class="span6 ">
                                        <div class="control-group">

                                            <label class="control-label"> 站点市:</label>

                                            <div class="controls">

                                                <select class="medium m-wrap">
                                                    <option value="">上海</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row-fluid">
                                    <div class="span6 ">
                                        <div class="control-group">

                                            <label class="control-label"> 站点区域:</label>

                                            <div class="controls">

                                                <select class="medium m-wrap">
                                                    <option value="">浦东新区</option>
                                                </select>
                                            </div>
                                        </div>

                                    </div>
                                    <div class="span6 ">

                                        <div class="control-group">

                                            <label class="control-label">站点类型:</label>

                                            <div class="controls">

                                                <select class="medium m-wrap">
                                                    <option value="">请选择</option>
                                                    <option value="">Male</option>

                                                    <option value="">Female</option>

                                                </select>
                                            </div>

                                        </div>

                                    </div>
                                </div>

                                <div class="row-fluid">

                                    <div class="span6 ">

                                        <div class="control-group">

                                            <label class="control-label">站点地址:</label>

                                            <div class="controls">

                                                <input type="text" class="m-wrap Meduam" value="@ViewBag.editLoc.LocName" />
                                                <button id="btnSearch" class="btn green">

                                                    <i class="icon-search"></i>

                                                </button>
                                            </div>

                                        </div>

                                    </div>
                                </div>
                            </form>

                            <!-- END FORM-->

                        </div>

                    </div>

                </div>

            </div>
        </div>

    </div>

    <!-- END PAGE CONTENT-->
</div>
@section Body{
<script>
    window.onload = function () {
        $("#btnBack").click(function () {
            window.history.back(-1);
        });

        $("#btnSearch").click(function () {
            window.history.back(-1);
        });

        $("#btnEdit").click(function () {
            var d = {};
            //判断文件框内容
            if ($("#locCode").val() != "") {
                d["LocCode"] = $("#locCode").val();
            }

            if ($("#locName").val() != "") {
                d["LocName"] = $("#locName").val();
            }

            if ($("#locAddress").val() != "") {
                d["LocAddress"] = $("#locAddress").val();
            }

            if ($("#locType").val() != "") {
                d["LocType"] = $("#locType").val();
            }

            if ($("#locStatus").val() != "") {
                d["LocStatus"] = $("#locStatus").val();
            }
            if ((JSON.stringify(d) == "{}")) {
                d = null;
            }
            $.ajax({
                url: "../api/LocApi/PostZhanDian",
                type: "post",
                contentType: 'application/json; charset=utf-8',
                data: JSON.stringify(d),
                success: function (data) {

                }
            }).fail(
                function (err) {
                    alert('查询失败!');
                });

        });
    }
</script>
}