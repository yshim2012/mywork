@{
    ViewBag.Title = "DictCreate";
}
@section Head{

}
<div class="container-fluid">
    <!-- BEGIN PAGE HEADER-->

    <div class="row-fluid">

        <div class="span12">

            <ul class="breadcrumb">

                <li>

                    <i class="icon-home"></i>

                    @Html.ActionLink("首页", "Index", "Home", routeValues: null, htmlAttributes: new { id = "IndexLink" })

                    <span class="icon-angle-right"></span>

                </li>

                <li>

                    <a href="#">基础数据管理</a>

                    <span class="icon-angle-right"></span>

                </li>

                <li>
                    @Html.ActionLink("系统参数新增", "DictCreate", "Dict", routeValues: null, htmlAttributes: new { id = "DictCreateLink" })
                </li>

            </ul>

        </div>

    </div>

    <!-- END PAGE HEADER-->
    <!-- BEGIN PAGE CONTENT-->

    <div class="row-fluid">

        <div class="span12">

            <!-- BEGIN SAMPLE FORM PORTLET-->

            <div class="portlet-body form">

                <div class="tabbable portlet-tabs">

                    <div class="portlet-body">

                        <div class="clearfix">

                            <div class="btn-group">

                                <button id="btnAdd" class="btn green" onclick="btnAdd_Click()">

                                    保存 <i class="icon-save"></i>

                                </button>
                            </div>
                            <div class="btn-group">
                                <button id="btnBack" class="btn green">

                                    返回 <i class="icon-retweet"></i>

                                </button>
                            </div>

                        </div>


                    </div>

                    <br />
                    <br />
                    <br />
                    <div class="tab-content">

                        <div class="tab-pane active" id="portlet_tab1">

                            <!-- BEGIN FORM-->

                            <form action="#" class="form-horizontal">

                                <div class="row-fluid">
                                    <div class="span6 ">
                                        <div class="control-group">

                                            <label class="control-label">参数编号:</label>

                                            <div class="controls">

                                                <input id="DictCode" name="DictCode" type="text" class="m-wrap Meduam" />

                                            </div>

                                        </div>
                                    </div>
                                    <div class="span6 ">
                                        <div class="control-group">
                                            <label class="control-label">参数名称:</label>

                                            <div class="controls">

                                                <input id="DictName" name="DictName" type="text" class="m-wrap Meduam" />
                                            </div>

                                        </div>
                                    </div>
                                </div>
                                <div class="row-fluid">

                                    <div class="span6 ">

                                        <div class="control-group">

                                            <label class="control-label">备注:</label>

                                            <div class="controls">
                                                <input id="remark" name="remark" type="text" class="m-wrap Meduam" />
                                            </div>
                                        </div>

                                    </div>
                                    <div class="span6 ">
                                        <div class="control-group">

                                            <label class="control-label">上级代码:</label>

                                            <div class="controls">

                                                <select id="ParentCode" name="ParentCode" class="medium m-wrap">
                                                    <option value="sh">上海</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                            <!-- END FORM-->
                        </div>
                    </div>
                </div>

            </div>

        </div>

        <!-- END SAMPLE FORM PORTLET-->

    </div>
    <div class="row-fluid">

        <div class="span12">


        </div>
    </div>
    <!-- END PAGE CONTENT-->
</div>
@section Body{

    <script>
        window.onload = function () {
            $("#btnBack").click(function () {
                window.location.href = "http://localhost:3947/Dict/DictIndex";
            });
        }

        function btnAdd_Click() {
            var d = {};
            //判断文件框内容
            if ($("#DictCode").val() == "") {
                alert("参数编码不能为空!");
                return;
            }
            d["DictCode"] = $("#DictCode").val();
            if ($("#DictName").val() == "") {
                alert("参数名称不能为空!");
                return;
            }
            d["DictName"] = $("#DictName").val();
            if ($("#remark").val() != "") {
                d["remark"] = $("#remark").val();
            }

            if ($("#ParentCode").val() == "") {
                alert("上级代码不能为空!");
                return;
            }
            d["ParentCode"] = $("#ParentCode").val();

            $.ajax({
                url: "../api/DictApi/CreateDict",
                type: "post",
                contentType: 'application/json; charset=utf-8',
                data: JSON.stringify(d),
                success: function (data) {
                    if (data != 1) {
                        alert("新增成功!");
                    } else {
                        alert('新增失败！');
                    }
                }
            }).fail(
                   function (err) {
                       alert('新增失败！');
                   });
        }  
    </script>
}

