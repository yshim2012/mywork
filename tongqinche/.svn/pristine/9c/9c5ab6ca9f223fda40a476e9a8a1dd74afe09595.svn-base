
@{
    ViewBag.Title = "CarrierCreate";
}

@section Head{
    <link href="../media/css/jqvmap.css" media="screen" rel="stylesheet" type="text/css" />
    }


<div class="container-fluid">
    <!-- BEGIN PAGE HEADER-->

    <div class="row-fluid">

        <div class="span12">

            <ul class="breadcrumb">

                <li>

                    <i class="icon-home"></i>

                    @Html.ActionLink("首页", "Index", "Home", routeValues: null, htmlAttributes: new { id = "IndexLink" })

                    <span class="icon-angle-right"></span>

                </li>

                <li>

                    <a href="#">基础数据管理</a>

                    <span class="icon-angle-right"></span>

                </li>

                <li>
                    @Html.ActionLink("承运商新增", "CarrierCreate", "Carrier", routeValues: null, htmlAttributes: new { id = "CarrierLink" })
                </li>

            </ul>

        </div>

    </div>

    <!-- END PAGE HEADER-->
    <!-- BEGIN PAGE CONTENT-->

    <div class="row-fluid">

        <div class="span12">

            <!-- BEGIN SAMPLE FORM PORTLET-->

            <div class="portlet-body form">

                <div class="tabbable portlet-tabs">

                    <div class="portlet-body">

                        <div class="clearfix">

                            <div class="btn-group">

                                <button id="btnAdd" class="btn green" onclick="btnAdd_Click()">

                                    新增 <i class="icon-save"></i>

                                </button>
                            </div>
                            <div class="btn-group">
                                <button id="btnBack" class="btn green">

                                    返回 <i class="icon-retweet"></i>

                                </button>
                            </div>

                        </div>


                    </div>

                    <br />
                    <br />
                    <br />
                    <div class="tab-content">

                        <div class="tab-pane active" id="portlet_tab1">

                            <!-- BEGIN FORM-->

                            <form action="#" class="form-horizontal">

                                <div class="row-fluid">
                                    <div class="span6 ">
                                        <div class="control-group">

                                            <label class="control-label">承运商名称:</label>

                                            <div class="controls">

                                                <input id="CarrierName" name="CarrierName" type="text" class="m-wrap Meduam" />

                                            </div>

                                        </div>
                                    </div>
                                    <div class="span6 ">
                                        <div class="control-group">
                                            <label class="control-label">联系人:</label>

                                            <div class="controls">

                                                <input id="Contact" name="Contact" type="text" class="m-wrap Meduam" />
                                            </div>

                                        </div>
                                    </div>
                                </div>
                                <div class="row-fluid">

                                    <div class="span6 ">

                                        <div class="control-group">

                                            <label class="control-label">手机:</label>

                                            <div class="controls">
                                                <input id="Mobile" name="Mobile" type="text" class="m-wrap Meduam" />
                                            </div>
                                        </div>

                                    </div>
                                    <div class="span6 ">
                                        <div class="control-group">

                                            <label class="control-label">电话:</label>

                                            <div class="controls">

                                                <input id="Tel" name="Tel" type="text" class="m-wrap Meduam" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row-fluid">

                                    <div class="span6 ">

                                        <div class="control-group">

                                            <label class="control-label">地址:</label>

                                            <div class="controls">
                                                <input id="Address" name="Address" type="text" class="m-wrap Meduam" />
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </form>
                            <!-- END FORM-->
                        </div>
                    </div>
                </div>

            </div>

        </div>

        <!-- END SAMPLE FORM PORTLET-->

    </div>
    <div class="row-fluid">

        <div class="span12">


        </div>
    </div>
    <!-- END PAGE CONTENT-->
</div>

@section Body{
    <script>
    window.onload = function () {
        $("#btnBack").click(function () {
            window.location.href = "http://localhost:3947/Carrier/CarrierIndex";
        });

    }

    function btnAdd_Click() {
        var d = {};
        //判断文件框内容
        if ($("#CarrierName").val() == "") {
            alert("承运商名称不能为空!");
            return;
        }
        d["CarrierName"] = $("#CarrierName").val();
        if ($("#Contact").val() == "") {
            alert("联系人不能为空!");
            return;
        }
        d["Contact"] = $("#Contact").val();
        if ($("#Mobile").val() == "") {
            alert("电话不能为空!");
            return;
        }
        d["Mobile"] = $("#Mobile").val();
        if ($("#Tel").val() == "") {
            alert("手机不能为空!");
            return;
        }
        d["Tel"] = $("#Tel").val();
        if ($("#Address").val() == "") {
            alert("地址不能为空!");
            return;
        }
        d["Address"] = $("#Address").val();
        $.ajax({
            url: "../api/CarrierApi/CreateCarrier",
            type: "post",
            contentType: 'application/json; charset=utf-8',
            data: JSON.stringify(d),
            success: function (data) {
                if (data == 1) {
                    alert("新增成功!");
                    window.history.back(-1);
                    //window.history.back(-1);
                } else {
                    alert('新增失败！');
                        
                }
            }
        }).fail(
               function (err) {
                   alert('新增失败！');
               });
          
    }
    </script>
    }