@{
    ViewBag.Title = "MonthRideSummaryIndex";
}
@section Head{
    <script>

        window.onload = function () {
            InitSelect("1006");
            InitSelect("1005");
            InitSelect("1008");
            $("#btnExport").click(function () {
                var d = {};
                //判断文件框内容
                if ($("#ui_date_picker_range_from").val() != "") {
                    d["rideStartTime"] = $("#ui_date_picker_range_from").val();
                }

                if ($("#ui_date_picker_range_to").val() != "") {
                    d["rideEndTime"] = $("#ui_date_picker_range_to").val();
                }


                if ($("#locType").val() != "") {
                    d["locType"] = $("#locType").val();
                }

                if ($("#cardType").val() != "") {
                    d["cardType"] = $("#cardType").val();
                }

                if ($("#company").val() != "") {
                    d["company"] = $("#company").val();
                }
                if ((JSON.stringify(d) == "{}")) {
                    d = null;
                }
                $.ajax({
                    url: "../api/ReportApi/ExportMonthRideSummaryReport",
                    type: "post",
                    contentType: 'application/json; charset=utf-8',
                    data: JSON.stringify(d),
                    success: function (data) {
                        alert('导出成功!');
                    }
                }).fail(
                    function (err) {
                        alert('导出失败!');
                    });

            });
        }

        function btnSelect_Click() {
            $('#table_view tr:not(:first)').empty();
            var d = {};
            //判断文件框内容
            if ($("#ui_date_picker_range_from").val() != "") {
                d["rideStartTime"] = $("#ui_date_picker_range_from").val();
            }

            if ($("#ui_date_picker_range_to").val() != "") {
                d["rideEndTime"] = $("#ui_date_picker_range_to").val();
            }

            if ($("#locType").val() != "") {
                d["locType"] = $("#locType").val();
            }

            if ($("#cardType").val() != "") {
                d["cardType"] = $("#cardType").val();
            }

            if ($("#company").val() != "") {
                d["company"] = $("#company").val();
            }
            if ((JSON.stringify(d) == "{}")) {
                d = null;
            }
            $.ajax({
                url: "../api/ReportApi/SelectMonthRideSummaryReport",
                type: "post",
                contentType: 'application/json; charset=utf-8',
                data: JSON.stringify(d),
                success: function (data) {
                    var MonthRideSummaryList = JSON.parse(data);
                    $.each(MonthRideSummaryList, function (i, row) {
                        var newRow = "<tr><td>" + row["CARD_TYPE"] + "</td><td>" + row["CO"] + "</td><td>" + row["TICKET_TYPE"]
                            + "</td><td>" + row["count"] + "</td><td> " + row["AMOUNT"] + "</td><td>" + row["totalAmount"] + "</td></tr>";
                        $("#table_view tr:last").after(newRow);
                    });
                }
            }).fail(
                function (err) {
                    alert('查询失败!');
                });
        }

        function InitSelect(parentCode) {
            var d2 = {};
            d2["ParentCode"] = parentCode;
            d2["Status"] = "0";
            if ((JSON.stringify(d2) == "{}")) {
                d2 = null;
            }
            $.ajax({
                url: "../api/DictApi/ShowDictList",
                type: "post",
                contentType: 'application/json; charset=utf-8',
                data: JSON.stringify(d2),
                success: function (data) {
                    var dictList = JSON.parse(data);
                    $.each(dictList, function (i, dict) {
                        switch (parentCode) {
                            case "1005":
                                $('#locType').append('<option value=' + dict.Code + '>' + dict.Name + '</option>');
                                break;
                            case "1006":
                                $('#cardType').append('<option value=' + dict.Code + '>' + dict.Name + '</option>');
                                break;
                            case "1008":
                                $('#company').append('<option value=' + dict.Code + '>' + dict.Name + '</option>');
                                break;
                        }
                    });
                }
            }).fail(
                  function (err) {
                      alert('查询失败!');
                  });
        }
    </script> }

<div class="container-fluid">
    <div class="row-fluid">
        <div class="span12">
            <ul class="breadcrumb">
                <li>
                    <i class="icon-home"></i>
                    @Html.ActionLink("首页", "Index", "Home", routeValues: null, htmlAttributes: new { id = "IndexLink" })
                    <span class="icon-angle-right"></span>
                </li>

                <li>
                    <a href="#">报表管理</a>
                    <span class="icon-angle-right"></span>
                </li>
                <li>
                    @Html.ActionLink("乘车计费月度统计", "MonthRideSummaryIndex", "MonthRideSummary", routeValues: null, htmlAttributes: new { id = "MonthRideSummaryLink" })
                </li>
            </ul>
        </div>
    </div>

    <div class="row-fluid">

        <div class="span12">

            <div class="portlet-body form">

                <div class="tabbable portlet-tabs">
                    <br />
                    <br /><br />
                    <div class="tab-content">

                        <div class="tab-pane active" id="portlet_tab1">

                            <form action="#" class="form-horizontal">
                                <div class="row-fluid">
                                    <div class="span6 ">
                                        <div class="control-group">
                                            <label class="control-label"> 站点类型:</label>
                                            <div class="controls">
                                                <select id="locType" class="medium m-wrap">
                                                    <option value="">全部</option>
                                                </select>
                                            </div>

                                        </div>
                                    </div>
                                    <div class="span6 ">
                                        <div class="control-group">
                                            <label class="control-label">乘车凭证:</label>
                                            <div class="controls">
                                                <select id="cardType" class="medium m-wrap">
                                                    <option value="">全部</option>
                                                </select>
                                            </div>

                                        </div>

                                    </div>
                                </div>
                                <div class="row-fluid">
                                    <div class="span6 ">
                                        <div class="control-group">
                                            <label class="control-label">所属公司:</label>
                                            <div class="controls">
                                                <select id="company" class="medium m-wrap">
                                                    <option value="">全部</option>
                                                </select>
                                            </div>

                                        </div>

                                    </div>
                                    <div class="span6 ">
                                        <div class="control-group">
                                            <label class="control-label">乘车日期:</label>
                                            <div class="controls">
                                                <input class="m-wrap small" size="16" type="text" value="" id="ui_date_picker_range_from" />
                                                <span class="text-inline">&nbsp;-&nbsp;</span>
                                                <input class="m-wrap small" size="16" type="text" value="" id="ui_date_picker_range_to" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>

                        </div>
                    </div>

                </div>

            </div>
        </div>

        <!-- END SAMPLE FORM PORTLET-->

    </div>

    <div class="row-fluid">
        <div class="span12">
            <div class="portlet box light-grey">
                <div class="portlet-body">

                    <div class="clearfix">

                        <div class="btn-group">

                            <button id="btnSelect" class="btn green" onclick="btnSelect_Click()">
                                查询  <i class="icon-search"></i>
                            </button>
                        </div>
                        <div class="btn-group">
                            <button id="btnExport" class="btn green">
                                导出 <i class="icon-download"></i>
                            </button>
                        </div>
                    </div>

                    <table class="table table-striped table-hover table-bordered" id="table_view">
                        <thead>
                            <tr> 
                                <th>乘车凭证</th>
                                <th>所属公司</th>
                                <th>站点类型</th>
                                <th>总次数</th>
                                <th>单价</th>
                                <th>费用统计</th>
                            </tr>
                        </thead>

                        <tbody></tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>
</div>

@section Body{

    <script src="../media/js/ui-jqueryui.js"></script>
    <script>

        jQuery(document).ready(function () {

            // initiate layout and plugins
            // Index.init()
            UIJQueryUI.init();

        });
    </script>
}
